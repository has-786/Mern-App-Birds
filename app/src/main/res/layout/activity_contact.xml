<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContactActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@color/lightgray"
            android:layout_marginTop="2dp"
            >

            <TextView
                android:id="@+id/textView4"
                android:layout_width="80dp"
                android:padding="5sp"

                android:textAlignment="center"                android:layout_height="wrap_content"
                android:background="@color/green"
                android:fontFamily="sans-serif-condensed-medium"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:layout_gravity="center"
                android:text="Email:" />

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="sans-serif-condensed-medium"
                android:padding="5dp"
                android:textColor="@color/green"
                android:textSize="15sp"
                android:clickable="true"
                android:autoLink="email"
                android:textStyle="bold"
                android:textIsSelectable="true"
                android:text="thelasthope786@gmail.com" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="2dp"

            android:background="@color/lightgray"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="80dp"
                android:padding="5sp"

                android:textAlignment="center"                android:layout_height="wrap_content"
                android:background="@color/green"
                android:fontFamily="sans-serif-condensed-medium"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:text="Youtube:" />

            <TextView
                android:id="@+id/youtube"
                android:layout_width="wrap_content"
                android:padding="5dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="sans-serif-condensed-medium"
                android:textColor="@color/green"
                android:textSize="15sp"
                android:clickable="true"
                android:onClick="openWeb"
                android:textIsSelectable="true"
                android:textStyle="bold"
                android:text="https://www.youtube.com/channel/UCQcgRY0EDyIdXNLt5wwzSwQ" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="2dp"

            android:background="@color/lightgray"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView8"
                android:layout_height="wrap_content"
                android:layout_width="80dp"
                android:padding="5sp"
                android:textAlignment="center"
                android:background="@color/green"
                android:fontFamily="sans-serif-condensed-medium"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:text="Facebook:" />

            <TextView
                android:id="@+id/facebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="sans-serif-condensed-medium"
                android:padding="5dp"
                android:clickable="true"
                android:onClick="openWeb"
                android:textColor="@color/green"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textIsSelectable="true"
                android:text="https://www.facebook.com/The-Last-Hope-224021335692141/" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="2dp"

            android:background="@color/lightgray"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/green"
                android:fontFamily="sans-serif-condensed-medium"
                android:padding="5sp"
                android:text="Instagram:"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/insta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="sans-serif-condensed-medium"
                android:padding="5sp"
                android:textColor="@color/green"
                android:textSize="15sp"
                android:textIsSelectable="true"
                android:clickable="true"
                android:textStyle="bold"
                android:text="thelasthope_786" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"

            android:background="@color/lightgray"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="80dp"
                android:padding="5sp"

                android:textAlignment="center"                android:layout_height="wrap_content"
                android:background="@color/green"
                android:fontFamily="sans-serif-condensed-medium"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:text="Address:" />

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="sans-serif-condensed-medium"
                android:padding="5dp"
                android:textColor="@color/green"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textIsSelectable="true"
                android:text="Kolkata, West Bengal, India" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>